doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/style.css')
        title Users
    body
        h1 Edit #{user.name}
        form(action=`/change-user/${user._id}` class="add" method="POST")
            input(type='hidden', name='_csrf', value=csrfToken)
            label(for="name") Name:
            input(id="name" name="name" value=`${user.name}`)
            label(for="age") Age:
            input(type="number", min="1", id="age" name="age" value=`${user.age}`)
            label(for="status") Status:
            input(id="status" name="status" value=`${user.status}`)
            label(for="avatar") Link for avatar:
            input(id="avatar" name="avatar" value=`${user.avatar}`)
            button(type="submit") Edit User